<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <StackPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0" />
   </StackPane>
   <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
      <TabPane stylesheets="@style.css" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <Tab closable="false" text="Детали">
            <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <center>
                  <VBox spacing="5.0">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
               </center>
               <bottom>
                  <AnchorPane BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" text="Трейлер" AnchorPane.leftAnchor="0.0" />
                        <Button layoutX="66.5" mnemonicParsing="false" text="Смотреть" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </bottom>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </BorderPane>
         </Tab>
         <Tab closable="false" text="Описание">
            <ScrollPane fitToWidth="true" style="-fx-background-color: #2b2b2b;">
               <VBox spacing="5.0">
                  <padding>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                  </padding>
               </VBox>
            </ScrollPane>
         </Tab>
         <Tab closable="false" text="Эпизоды">
            <ScrollPane fitToWidth="true" style="-fx-background-color: #2b2b2b;">
               <StackPane>
                  <TilePane hgap="4.0" prefColumns="3" prefRows="3" vgap="4.0">
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </TilePane>
                  <BorderPane visible="false">
                     <StackPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </StackPane.margin>
                     <center>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="background-second" stylesheets="@style.css" />
                     </center>
                  </BorderPane>
               </StackPane>
            </ScrollPane>
         </Tab>
      </TabPane>
   </AnchorPane>
</HBox>
