<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="searchPane" maxWidth="600.0" minWidth="200.0" prefWidth="600.0"
            fx:controller="com.cinema.javafx.controller.filter.FilterController">
    <TextField styleClass="field-text" fx:id="queryTextField" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Button minWidth="40.0" mnemonicParsing="false">
            <styleClass>
                <String fx:value="icon" />
                <String fx:value="icon-settings" />
            </styleClass>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </Button>
        <Button alignment="CENTER" minWidth="40.0" mnemonicParsing="false" textAlignment="CENTER" onMouseClicked="#searchByText">
            <styleClass>
                <String fx:value="icon" />
                <String fx:value="icon-search" />
            </styleClass>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </Button>
    </HBox>
    <BorderPane.margin>
        <Insets left="10.0" right="10.0" />
    </BorderPane.margin>
</AnchorPane>
