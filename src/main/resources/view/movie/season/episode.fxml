<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="episodePane"
            fx:controller="com.cinema.javafx.controller.movies.movie.season.EpisodeController">
    <left>
        <ImageView fx:id="poster" styleClass="poster-h"/>
    </left>
    <center>
        <VBox>
            <padding>
                <Insets right="5" left="5" />
            </padding>
            <Label fx:id="title" wrapText="true" styleClass="text-second"/>
            <Label fx:id="release" styleClass="text-small"/>
            <Label fx:id="rating" styleClass="text-small"/>
        </VBox>
    </center>
    <right>
        <HBox>
            <Button styleClass="icon, icon-play"/>
        </HBox>
    </right>
</BorderPane>
