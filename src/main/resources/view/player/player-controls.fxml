<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="background-second" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinema.javafx.controller.player.PlayerControlsController">
    <HBox alignment="CENTER">
        <Label fx:id="currentTimeLabel" HBox.hgrow="NEVER" />
        <Slider fx:id="timelineSlider" HBox.hgrow="ALWAYS" onMousePressed="#beginTracking" onMouseReleased="#endTracking">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </Slider>
        <Label fx:id="durationLabel" HBox.hgrow="NEVER" />
    </HBox>
    <TilePane>
        <Button onMouseClicked="#play" >play</Button>
        <Button onMouseClicked="#pause" >pause</Button>
        <Button onMouseClicked="#stop" >stop</Button>
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
        </padding>
    </TilePane>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
