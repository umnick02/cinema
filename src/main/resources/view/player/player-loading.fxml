<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="torrentStatistic" styleClass="background-black"
           xmlns="http://javafx.com/javafx/10.0.2-internal"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cinema.javafx.controller.player.PosterController">
    <ImageView fx:id="posterView" preserveRatio="true" />
    <BorderPane>
        <bottom>
            <HBox alignment="CENTER" spacing="10.0">
                <Label fx:id="status" styleClass="text-first" />
                <Label fx:id="peers" styleClass="text-first" />
                <Label fx:id="speed" styleClass="text-first" />
                <opaqueInsets>
                   <Insets />
                </opaqueInsets>
                <BorderPane.margin>
                   <Insets bottom="10.0" left="5.0" top="10.0" />
                </BorderPane.margin>
            </HBox>
        </bottom>
    </BorderPane>
    <Pane styleClass="dark" />
</StackPane>
