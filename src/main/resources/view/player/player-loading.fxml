<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="torrentStatistic" styleClass="background-black"
           xmlns="http://javafx.com/javafx/10.0.2-internal"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cinema.javafx.controller.player.PosterController">
    <Pane styleClass="dark" />
    <ImageView fx:id="posterView" preserveRatio="true" />
    <BorderPane>
        <top>
            <Button alignment="CENTER" onMouseClicked="#closePlayer" styleClass="icon-player, icon-close" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" StackPane.alignment="TOP_LEFT" />
        </top>
        <bottom>
            <HBox alignment="CENTER" spacing="10.0">
                <Label fx:id="statusLabel" styleClass="text-first" />
                <Label fx:id="peersLabel" styleClass="text-first" />
                <Label fx:id="speedLabel" styleClass="text-first" />
                <opaqueInsets>
                   <Insets />
                </opaqueInsets>
                <BorderPane.margin>
                   <Insets bottom="10.0" left="5.0" top="10.0" />
                </BorderPane.margin>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
