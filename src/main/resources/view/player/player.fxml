<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<StackPane fx:id="playerPane" styleClass="background-black" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinema.javafx.controller.player.PlayerController">
    <ImageView fx:id="videoImageView" onMouseClicked="#changePlayingShortcut" preserveRatio="true" />
    <Button fx:id="closeButton" alignment="CENTER" onMouseClicked="#closePlayer" styleClass="icon-player, icon-close" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" StackPane.alignment="TOP_LEFT" />
   <AnchorPane fx:id="controlPane" styleClass="control-panel" StackPane.alignment="BOTTOM_CENTER">
      <children>
         <VBox fx:id="playerBottom" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
             <BorderPane fx:id="playerControlsPane">
                 <left>
                 <Button fx:id="playButton" alignment="CENTER" onMouseClicked="#changePlaying" styleClass="icon-player, icon-pause" />
                 </left>
                 <center>
                 <StackPane>
                    <ProgressBar fx:id="downloadBar" styleClass="download-bar" HBox.hgrow="ALWAYS" prefWidth="Infinity" progress="0" />
                     <HBox alignment="CENTER_LEFT" styleClass="timeline-labels">
                         <Label fx:id="currentTimeLabel" styleClass="white, bold" HBox.hgrow="NEVER" />
                         <Text styleClass="white, bold"> / </Text>
                         <Label fx:id="durationLabel" styleClass="white, bold" HBox.hgrow="NEVER" />
                     </HBox>
                     <ProgressBar fx:id="timelineBar" styleClass="timeline-bar" onMousePressed="#beginMovieTracking" onMouseReleased="#endMovieTracking" HBox.hgrow="ALWAYS" prefWidth="Infinity" progress="0"/>
                   </StackPane>
                 </center>
                 <right>
                   <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
                       <Button fx:id="volumeButton" alignment="CENTER" onMouseClicked="#volume" styleClass="icon-player, icon-volume" />
                       <Slider fx:id="volumeSlider" onMousePressed="#beginVolumeTracking" onMouseReleased="#endVolumeTracking" HBox.hgrow="ALWAYS" />
                           <MenuButton fx:id="settings" styleClass="icon-player, icon-settings-video">
                        <items>
                           <Menu fx:id="audioMenu" mnemonicParsing="false" styleClass="background-black" text="Аудиодорожка" />
                           <Menu fx:id="subtitleMenu" mnemonicParsing="false" styleClass="background-black" text="Субтитры" />
                        </items>
                           </MenuButton>
                       <Button fx:id="fullscreenButton" alignment="CENTER" onMouseClicked="#changeFullscreenStatus" styleClass="icon-player, icon-fullscreen-in" />
                   </HBox>
                 </right>
             </BorderPane>
         </VBox>
      </children>
   </AnchorPane>
</StackPane>
